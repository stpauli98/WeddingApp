generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest {
  id              String    @id @default(uuid())
  first_name      String
  last_name       String
  email           String    @unique
  code            String?
  code_expires_at DateTime?
  verified        Boolean   @default(false)
  created_at      DateTime  @default(now())
}
