// Baza: PostgreSQL
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id          String   @id @default(uuid())
  email       String   @unique
  passwordHash String
  createdAt   DateTime @default(now())
  event       Event?   @relation("AdminEvent")
  eventId     String?  @unique
  sessions    AdminSession[]
}

model Event {
  id          String   @id @default(uuid())
  coupleName  String
  location    String
  date        DateTime
  slug        String   @unique
  guestMessage String?
  createdAt   DateTime @default(now())
  guests      Guest[]
  admin       Admin?   @relation("AdminEvent", fields: [adminId], references: [id])
  adminId     String?  @unique // Svaki event ima samo jednog admina
}

model Guest {
  id          String   @id @default(uuid())
  event       Event    @relation(fields: [eventId], references: [id])
  eventId     String
  firstName   String
  lastName    String
  email       String   @unique
  verified    Boolean  @default(false)
  code        String?  // Verifikacioni kod
  codeExpires DateTime?
  sessionToken String?  // Token za autentifikaciju
  sessionExpires DateTime? // Vreme isteka sesije
  createdAt   DateTime @default(now())
  images      Image[]
  message     Message?
}

model Image {
  id          String   @id @default(uuid())
  guest       Guest    @relation(fields: [guestId], references: [id])
  guestId     String
  imageUrl    String
  storagePath String?  // Putanja u Supabase Storage
  createdAt   DateTime @default(now())
}

model Message {
  id        String   @id @default(uuid())
  guest     Guest    @relation(fields: [guestId], references: [id])
  guestId   String   @unique
  text      String
  createdAt DateTime @default(now())
}

model AdminSession {
  id           String   @id @default(uuid())
  admin        Admin    @relation(fields: [adminId], references: [id])
  adminId      String
  sessionToken String   @unique
  expiresAt    DateTime
  createdAt    DateTime @default(now())
}
